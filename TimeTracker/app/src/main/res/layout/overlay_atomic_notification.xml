<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_main"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_atomic_notification"
    android:elevation="8dp"
    android:padding="12dp">

    <!-- 头部 - 始终显示 -->
    <LinearLayout
        android:id="@+id/container_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 当前时间块指示器 -->
        <View
            android:id="@+id/indicator_current"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/circle_indicator"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_current_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无时间块"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击添加"
                android:textSize="11sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- 展开/收起箭头 -->
        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_expand"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- 剩余时间 -->
    <TextView
        android:id="@+id/tv_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textColor="#007AFF"
        android:layout_marginTop="4dp" />

    <!-- 番茄钟倒计时（如果有） -->
    <TextView
        android:id="@+id/tv_pomodoro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#FF9500"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

    <!-- 展开内容 -->
    <LinearLayout
        android:id="@+id/content_expanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="12dp">

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444"
            android:layout_marginBottom="12dp" />

        <!-- 今日统计 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日统计"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_productive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元气满满: 0分钟"
            android:textSize="11sp"
            android:textColor="#81C784"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_unproductive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摸鱼时光: 0分钟"
            android:textSize="11sp"
            android:textColor="#FF8A65"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_efficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="效率: 0%"
            android:textSize="11sp"
            android:textColor="#64B5F6"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>