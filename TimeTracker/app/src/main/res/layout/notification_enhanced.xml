<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 当前时间块 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <View
            android:id="@+id/iv_current_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_indicator"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_current_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无进行中的时间块"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击添加新的时间块"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_current_nature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#007AFF"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#007AFF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_marginBottom="12dp" />

    <!-- 下一个时间块 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <View
            android:id="@+id/iv_next_indicator"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/circle_indicator"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_next_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日无更多安排"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_next_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_marginBottom="12dp" />

    <!-- 今日统计 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_stats_productive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元气满满: 0分钟"
            android:textSize="13sp"
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/tv_stats_unproductive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摸鱼时光: 0分钟"
            android:textSize="13sp"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ProgressBar
                android:id="@+id/progress_efficiency"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:progress="0"
                android:max="100"
                android:progressDrawable="@drawable/progress_efficiency" />

            <TextView
                android:id="@+id/tv_efficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="效率: 0%"
                android:textSize="12sp"
                android:textColor="#007AFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>